<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- INVOICE CARD -->
        <LinearLayout
            android:id="@+id/invoiceCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp">

            <!-- SUCCESS ANIMATION AREA -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp">

                <!-- SUCCESS ICON - TANPA LINGKARAN, HANYA GAMBAR -->
                <ImageView
                    android:layout_width="217dp"
                    android:layout_height="108dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_success" />

                <!-- SUCCESS TITLE -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Peminjaman Berhasil!"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#00847D"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buku berhasil dipinjam"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- DETAIL CARD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@android:color/white"
                    android:padding="24dp">

                    <!-- HEADER DETAIL -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="24dp"
                            android:background="#00847D"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:text="Detail Peminjaman"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#00847D"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_bold"/>
                    </LinearLayout>

                    <!-- NAMA -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#F8F9FA"
                        android:padding="14dp"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nama Peminjam"
                            android:textSize="11sp"
                            android:textColor="#757575"
                            android:fontFamily="@font/poppins_regular"
                            android:letterSpacing="0.05"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tvNama"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="#212121"
                            android:fontFamily="@font/poppins_medium"/>
                    </LinearLayout>

                    <!-- JUDUL BUKU -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#F8F9FA"
                        android:padding="14dp"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Judul Buku"
                            android:textSize="11sp"
                            android:textColor="#757575"
                            android:fontFamily="@font/poppins_regular"
                            android:letterSpacing="0.05"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tvJudul"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="#212121"
                            android:fontFamily="@font/poppins_medium"/>
                    </LinearLayout>

                    <!-- TANGGAL -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#F8F9FA"
                        android:padding="14dp"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tanggal Peminjaman"
                            android:textSize="11sp"
                            android:textColor="#757575"
                            android:fontFamily="@font/poppins_regular"
                            android:letterSpacing="0.05"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tvTanggal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="#212121"
                            android:fontFamily="@font/poppins_medium"/>
                    </LinearLayout>

                    <!-- EMAIL -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#F8F9FA"
                        android:padding="14dp"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textSize="11sp"
                            android:textColor="#757575"
                            android:fontFamily="@font/poppins_regular"
                            android:letterSpacing="0.05"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="#212121"
                            android:fontFamily="@font/poppins_medium"/>
                    </LinearLayout>

                    <!-- NO HP -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#F8F9FA"
                        android:padding="14dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nomor HP"
                            android:textSize="11sp"
                            android:textColor="#757575"
                            android:fontFamily="@font/poppins_regular"
                            android:letterSpacing="0.05"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tvHp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="#212121"
                            android:fontFamily="@font/poppins_medium"/>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
        <!-- END INVOICE CARD -->

        <!-- BUTTONS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:gravity="center">

            <!-- BUTTON DOWNLOAD -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDownload"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="Download"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginEnd="8dp"
                app:backgroundTint="#00847D"
                app:cornerRadius="12dp"
                app:elevation="6dp"
                app:icon="@android:drawable/stat_sys_download"
                app:iconGravity="textStart"
                app:iconTint="@android:color/white"/>

            <!-- BUTTON HOME -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnHome"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="Home"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginStart="8dp"
                app:backgroundTint="#757575"
                app:cornerRadius="12dp"
                app:elevation="6dp"
                app:icon="@android:drawable/ic_menu_revert"
                app:iconGravity="textStart"
                app:iconTint="@android:color/white"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>