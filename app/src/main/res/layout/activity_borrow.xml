<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section dengan Background Hijau -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#00847D"
            android:paddingTop="40dp"
            android:paddingBottom="60dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:elevation="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Form Peminjaman Buku"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/poppins_bold"
                android:layout_gravity="center_horizontal"
                android:letterSpacing="0.02"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Isi data diri Anda dengan lengkap"
                android:textSize="14sp"
                android:textColor="#B2DFDB"
                android:fontFamily="@font/poppins_regular"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Card Form dengan Margin Negatif untuk Overlap Effect -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-40dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@android:color/white">

                <!-- Nama Lengkap dengan Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Lengkap"
                    android:textSize="12sp"
                    android:textColor="#00847D"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginBottom="8dp"
                    android:letterSpacing="0.05"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:boxBackgroundColor="#F8F9FA"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:boxStrokeColor="#00847D"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtNama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Masukkan nama lengkap Anda"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        android:padding="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Judul Buku dengan Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Judul Buku"
                    android:textSize="12sp"
                    android:textColor="#00847D"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginBottom="8dp"
                    android:letterSpacing="0.05"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:boxBackgroundColor="#F0F0F0"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxStrokeWidth="0dp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtJudul"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Judul buku yang dipinjam"
                        android:enabled="false"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        android:padding="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Tanggal Peminjaman dengan Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Peminjaman"
                    android:textSize="12sp"
                    android:textColor="#00847D"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginBottom="8dp"
                    android:letterSpacing="0.05"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:boxBackgroundColor="#F8F9FA"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:boxStrokeColor="#00847D"
                    app:hintEnabled="false"
                    app:endIconMode="custom"
                    app:endIconDrawable="@android:drawable/ic_menu_my_calendar"
                    app:endIconTint="#00847D">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtTanggal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Pilih tanggal peminjaman"
                        android:focusable="false"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        android:padding="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Email dengan Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="12sp"
                    android:textColor="#00847D"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginBottom="8dp"
                    android:letterSpacing="0.05"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:boxBackgroundColor="#F8F9FA"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:boxStrokeColor="#00847D"
                    app:hintEnabled="false"
                    app:endIconMode="custom"
                    app:endIconDrawable="@android:drawable/ic_dialog_email"
                    app:endIconTint="#00847D">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="nama@email.com"
                        android:inputType="textEmailAddress"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        android:padding="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Nomor HP dengan Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nomor HP"
                    android:textSize="12sp"
                    android:textColor="#00847D"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginBottom="8dp"
                    android:letterSpacing="0.05"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="28dp"
                    app:boxBackgroundColor="#F8F9FA"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:boxStrokeColor="#00847D"
                    app:hintEnabled="false"
                    app:endIconMode="custom"
                    app:endIconDrawable="@android:drawable/stat_sys_phone_call"
                    app:endIconTint="#00847D">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtHp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="08xxxxxxxxxx"
                        android:inputType="phone"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        android:padding="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Tombol Pinjam Modern -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPinjam"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="Pinjam Buku Sekarang"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="8dp"
                    app:cornerRadius="12dp"
                    app:backgroundTint="#00847D"
                    app:elevation="6dp"
                    app:icon="@android:drawable/ic_menu_send"
                    app:iconGravity="textEnd"
                    app:iconTint="@android:color/white"/>

                <!-- Info Text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pastikan data yang Anda masukkan sudah benar"
                    android:textSize="11sp"
                    android:textColor="#9E9E9E"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>