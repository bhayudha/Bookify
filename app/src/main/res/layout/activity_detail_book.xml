<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F5F5"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header dengan Gradient Effect -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00847D"
            android:paddingTop="32dp"
            android:paddingBottom="32dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:elevation="8dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBookCover"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:layout_centerVertical="true"
                app:cardCornerRadius="12dp"
                app:cardElevation="12dp"
                app:strokeWidth="0dp">

                <ImageView
                    android:id="@+id/imgBook"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_toEndOf="@id/cardBookCover"
                android:layout_centerVertical="true"
                android:paddingStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="4dp"
                    android:fontFamily="@font/poppins_bold"/>

                <TextView
                    android:id="@+id/tvAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#E0F2F1"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/poppins_regular"/>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Identitas Buku Card dengan Icon -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:padding="20dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="24dp"
                            android:background="#00847D"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:text="Identitas Buku"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#00847D"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F8F8F8"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tvPublisher"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“š Penerbit:"
                            android:textColor="#424242"
                            android:textSize="14sp"
                            android:paddingBottom="8dp"
                            android:fontFamily="@font/poppins_medium"/>

                        <TextView
                            android:id="@+id/tvPage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“„ Jumlah Halaman:"
                            android:textColor="#424242"
                            android:textSize="14sp"
                            android:paddingBottom="8dp"
                            android:fontFamily="@font/poppins_medium"/>

                        <TextView
                            android:id="@+id/tvLang"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ðŸŒ Bahasa:"
                            android:textColor="#424242"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_medium"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Dipublikasikan Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:padding="20dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="24dp"
                            android:background="#00847D"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:text="Dipublikasikan"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#00847D"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F8F8F8"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#424242"
                            android:textSize="14sp"
                            android:paddingBottom="12dp"
                            android:drawablePadding="8dp"
                            android:fontFamily="@font/poppins_regular"/>

                        <TextView
                            android:id="@+id/tvDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#616161"
                            android:textSize="14sp"
                            android:lineSpacingExtra="4dp"
                            android:fontFamily="@font/poppins_regular"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Modern Button dengan Shadow -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBorrow"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="Pinjam Buku"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                app:backgroundTint="#00847D"
                app:cornerRadius="12dp"
                app:elevation="8dp"
                app:icon="@android:drawable/ic_input_add"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:iconTint="@android:color/white"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>