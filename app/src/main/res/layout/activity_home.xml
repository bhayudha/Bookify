<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:fitsSystemWindows="true">

    <!-- Header Section dengan Background Putih -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:elevation="4dp">

        <!-- Logo Bookify -->
        <ImageView
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:src="@drawable/bookify_logo"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:layout_marginBottom="20dp"/>

        <!-- Search Bar Material -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E0E0E0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@android:color/white"
                android:paddingStart="16dp"
                android:paddingEnd="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_search"
                    android:tint="#9E9E9E"
                    android:layout_marginEnd="12dp"/>

                <EditText
                    android:id="@+id/edtSearch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Cari judul buku..."
                    android:textSize="15sp"
                    android:textColor="#212121"
                    android:textColorHint="#9E9E9E"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="text"
                    android:imeOptions="actionSearch"/>

                <ImageView
                    android:id="@+id/btnSearch"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_search"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:tint="#00847D"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:background="#E0E0E0"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>

                <ImageView
                    android:id="@+id/btnFilter"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_filter"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:tint="#00847D"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Content Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="20dp">

        <!-- Section Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <View
                android:layout_width="4dp"
                android:layout_height="24dp"
                android:background="#00847D"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Koleksi Buku"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#00847D"
                android:fontFamily="@font/poppins_bold"/>

            <!-- Page Info -->
            <TextView
                android:id="@+id/tvPageInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hal 1 dari 3"
                android:textSize="12sp"
                android:textColor="#757575"
                android:fontFamily="@font/poppins_medium"/>
        </LinearLayout>

        <!-- Book Grid dengan 3 Kolom -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvBooks"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:overScrollMode="never"/>

    </LinearLayout>

    <!-- Simple Pagination -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:background="@android:color/white">

        <!-- Previous Button -->
        <ImageView
            android:id="@+id/btnPrevious"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_media_previous"
            android:padding="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#757575"/>

        <!-- Page Numbers Container -->
        <LinearLayout
            android:id="@+id/paginationContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

            <!-- Page numbers will be added dynamically -->
            <TextView
                android:id="@+id/tvPage1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="1"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_page_active"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/tvPage2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="2"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#757575"
                android:background="@drawable/bg_page_inactive"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/tvPage3"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="3"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#757575"
                android:background="@drawable/bg_page_inactive"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/tvPageDots"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="..."
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#757575"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:visibility="gone"/>

        </LinearLayout>

        <!-- Next Button -->
        <ImageView
            android:id="@+id/btnNext"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_media_next"
            android:padding="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#00847D"/>

    </LinearLayout>

</LinearLayout>